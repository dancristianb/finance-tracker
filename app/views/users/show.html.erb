<h2>User details:</h2>

<div class="row">
  <div class="col-3">
    <div class="card mb-3 bg-light">
      <%= image_tag 'undraw_profile_pic_ic5t.svg', class: "card-img-top p-4" %>
      <div class="card-body">
        <h5 class="card-title text-success"><%= @user.full_name %></h5>
        <p class="card-text"><%= @user.email %></p>
        <% if current_user.not_friends_with?(@user) %>
          <%= link_to 'Follow friend?', friendships_path(friend: @user),
                      class: 'btn btn-success btn-sm', method: :post %>
        <% else %>
          <span class="badge badge-secondary">You are friends</span>
        <% end %>
      </div>
    </div>
  </div>
</div>

